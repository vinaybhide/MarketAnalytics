@page
@model MarketAnalytics.Pages.PortfolioPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit - @Model.portfolio.StockMaster.CompName (@Model.portfolio.StockMaster.Symbol)</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="portfolio.PORTFOLIO_ID" />
            <input type="hidden" asp-for="portfolio.StockMasterID" />
            <div class="form-group">
                <label asp-for="portfolio.PURCHASE_DATE" class="control-label"></label>
                <input asp-for="portfolio.PURCHASE_DATE" class="form-control" />
                <span asp-validation-for="portfolio.PURCHASE_DATE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="portfolio.QUANTITY" class="control-label"></label>
                <input asp-for="portfolio.QUANTITY" class="form-control" />
                <span asp-validation-for="portfolio.QUANTITY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="portfolio.COST_PER_SHARE" class="control-label"></label>
                <input asp-for="portfolio.COST_PER_SHARE" class="form-control" />
                <span asp-validation-for="portfolio.COST_PER_SHARE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
