@page
@model MarketAnalytics.Pages.UserManager.UserManagerCreateModel
@{
    ViewData["Title"] = "UserManagerCreate";
}
<h3>Add new user</h3>
<hr />
@if (Model.bNameUnique == false)
{
    <b>@Model.errorMessage.ToString()</b>
}
<div class="row">
    <div class="col-md-4">
        <form asp-page="./UserManagerCreate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userMaster.USER_ID" class="control-label"></label>
                <input asp-for="userMaster.USER_ID" class="form-control" />
                <span asp-validation-for="userMaster.USER_ID" class="text-danger"></span>

                <label asp-for="userMaster.USER_PWD" class="control-label"></label>
                <input type="password" asp-for="userMaster.USER_PWD" class="form-control" />
                <span asp-validation-for="userMaster.USER_PWD" class="text-danger"></span>

                @if(Model.requestedUserType != null)
                {
                <label asp-for="userMaster.USER_TYPE" class="control-label"></label>
                <input type="range" asp-for="userMaster.USER_TYPE" class="form-control" />
                <span asp-validation-for="userMaster.USER_TYPE" class="text-danger"></span>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./portfoliomasterIndex" asp-route-firsttimemaster="false">Back to full List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
